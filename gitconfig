	ap = add -p
	br = branch
	ci = commit -v
	cia = commit -v --amend
	co = checkout
	cp = cherry-pick
	dfc = diff --cached
	dffc = diff --color-words --cached
	df = diff
	dff = diff --color-words
	lf = log -p --stat
	lg = log -p --color-words
	lgg = log --oneline --graph
	rb = rebase
